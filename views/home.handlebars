<main id="home">
    {{>header}}

    {{!-- {{#each data}} --}}
    <article>
        <img src="../static/img/eetcafe_klaas.jpg" alt="Interieur van Eetcafe Klaas">
        <div>
            <div>
                <h2>{{data.[1].naam}}</h2>
                <p>{{this.prijs}}</p>
            </div>
            <ul>
                {{#each this.tags}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{this.omschrijving}}</p>
            <section>
                <form action="/dislike" method="POST">
                    <input type="hidden" name="naam" value="Eetcafé Klaas"><br>
                    <input type="hidden" name="restaurantId" value=1><br>
                    <input type="hidden" name="voorkeur" value="dislike"><br>
                    <input type="image" src="../static/img/cancel.png" alt="Dislike button">
                </form>
                <form action="/like" method="POST">
                    <input type="hidden" name="naam" value="Eetcafé Klaas"><br>
                    <input type="hidden" name="restaurantId" value=1><br>
                    <input type="hidden" name="voorkeur" value="like"><br>
                    <input type="image" src="../static/img/love.png" alt="Like button">
                </form>
            </section>
        </div>
    </article>
    {{!-- {{/each}} --}}

    {{>nav}}
</main>